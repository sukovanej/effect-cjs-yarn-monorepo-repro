{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
